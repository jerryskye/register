.card.mb-4
  .card-body
    %h3.card-title= @lecture.subject
    %h4.card-subtitle.text-muted= @lecture_view_object.timeframe
  .card-header
    = link_to 'Edit', edit_lecture_path(@lecture), class: 'btn btn-info btn-sm'
    = link_to 'All lectures', lectures_path, class: 'btn btn-primary btn-sm'
.card
  .card-header
    %h4.card-title Attendance
  .card-body
    %table.table.table-hover
      %thead
        %tr
          %th #
          %th Student
          %th Clocked in at

      %tbody
        - @lecture.entries.each_with_index do |entry, index|
          %tr
            %th= index + 1
            %td= user_string(entry.user)
            %td= entry.created_at.strftime('%H:%M')
