.card.mb-4
  .card-body
    %h3.card-title= @lecture.subject
    %h4.card-subtitle.text-muted= @lecture.dtstart.strftime('%d-%m-%Y %H:%M-') + @lecture.dtend.strftime('%H:%M')
  .card-header
    = link_to 'Edit', edit_lecture_path(@lecture), class: 'btn btn-info btn-sm'
    = link_to 'All lectures', lectures_path, class: 'btn btn-primary btn-sm'
.card
  .card-header
    %h4.card-title Attendance
  %ul.list-group.list-group-flush
    - @lecture.entries.each do |entry|
      %li.list-group-item= link_to("#{entry.user.name} (#{entry.user.album_no})", entry)
