.pb-2.mt-4.mb-2.border-bottom
  %h2 Edit info
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  - if resource.errors.any?
    - resource.errors.full_messages.each do |message|
      .alert.alert-danger= message
  .form-group.row
    = f.label :email, class: 'col-sm-3 col-form-label'
    .col-sm-5
      = f.email_field :email, class: 'form-control'
  .form-group.row
    = f.label :password, class: 'col-sm-3 col-form-label'
    .col-sm-5
      = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "leave blank if you don't want to change it"
  .form-group.row
    = f.label :password_confirmation, class: 'col-sm-3 col-form-label'
    .col-sm-5
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "leave blank if you don't want to change it"
  .form-group.row
    = f.label :name, class: 'col-sm-3 col-form-label'
    .col-sm-5
      = f.text_field :name, class: 'form-control'
  - unless current_user.admin?
    .form-group.row
      = f.label :album_no, class: 'col-sm-3 col-form-label'
      .col-sm-5
        = f.text_field :album_no, class: 'form-control'
  .form-group.row
    = f.label :current_password, class: 'col-sm-3 col-form-label'
    .col-sm-5
      = f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: 'enter your password to confirm changes'
  .form-group.row
    .col-sm-5
      = f.submit 'Update', class: 'btn btn-primary'
  .row
    .col-sm-5
      = link_to 'Cancel', :back, class: 'btn btn-danger'
